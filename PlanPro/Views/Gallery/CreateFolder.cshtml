@model PlanPro.Models.GalleryFolder
@{
    ViewBag.Title = "Create Folder";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }
    .form-container {
        max-width: 500px;
        margin: 60px auto;
        padding: 2.5rem;
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
        transition: box-shadow 0.3s ease;
        margin-top: 80px;
    }

        .form-container:hover {
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        }

    .form-title {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: #344767;
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

        .form-title i {
            color: #4ea1f3;
        }

    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .input-group-text {
        background-color: #e9ecef;
        border-radius: 0.5rem 0 0 0.5rem;
        border: 1px solid #ced4da;
    }

    .form-control {
        border-radius: 0 0.5rem 0.5rem 0;
        transition: border-color 0.2s ease;
    }

        .form-control:focus {
            border-color: #4ea1f3;
            box-shadow: 0 0 0 0.2rem rgba(78, 161, 243, 0.25);
        }

    .validation-message {
        font-size: 0.9rem;
        color: #dc3545;
        margin-top: 0.25rem;
    }

    .custom-blue-btn {
        background-color: #4ea1f3;
        border: none;
        color: #fff;
        font-weight: 500;
        padding: 0.6rem 1.25rem;
        border-radius: 0.5rem;
        width: 100%;
        transition: background-color 0.25s ease, box-shadow 0.25s ease;
    }

        .custom-blue-btn:hover {
            background-color: #368cd7;
            box-shadow: 0 8px 20px rgba(78, 161, 243, 0.2);
        }

        .custom-blue-btn i {
            margin-right: 6px;
        }
</style>

<div class="container">
    <div class="form-container">
        <div class="form-title">
            <i class="fas fa-folder-plus"></i> Create New Folder
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.FolderName, new { @class = "form-label" })
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-folder"></i>
                    </span>
                    @Html.TextBoxFor(m => m.FolderName, new
                    {
                        @class = "form-control",
                        placeholder = "Enter folder name"
                    })
                </div>
                <div class="validation-message">
                    @Html.ValidationMessageFor(m => m.FolderName)
                </div>
            </div>

            <button type="submit" class="btn custom-blue-btn mt-3 shadow-sm">
                <i class="fas fa-check-circle"></i> Create Folder
            </button>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            var folderExists = '@TempData["FolderExists"]';
            if (folderExists.toLowerCase() === 'true') {
                Swal.fire({
                    icon: 'error',
                    title: 'Duplicate Folder',
                    text: 'A folder with this name already exists. Please choose a different name.',
                    confirmButtonColor: '#3085d6'
                });
            }
        });
    </script>
}
