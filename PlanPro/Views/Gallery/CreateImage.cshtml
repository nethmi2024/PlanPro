@model PlanPro.Models.GalleryImage
@{
    ViewBag.Title = "Upload Image";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .form-wrapper {
        max-width: 600px;
        margin: 3rem auto;
        background: #fff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
        margin-top: 80px;
    }

    .form-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #4e73df;
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #343a40;
    }

    .form-control,
    .form-select {
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 0.75rem;
        border: 1px solid #ced4da;
        transition: all 0.3s ease-in-out;
        font-size: 1rem;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
            outline: none;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-primary-gradient {
        background: linear-gradient(to right, #4e73df, #1cc88a);
        border: none;
        color: #fff;
        border-radius: 0.75rem;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary-gradient:hover {
            background: linear-gradient(to right, #3a66d2, #17b67d);
            transform: scale(1.02);
        }

    .back-link {
        text-decoration: none;
        font-weight: 500;
        color: #6c757d;
        margin-top: 1rem;
        display: inline-block;
    }

        .back-link i {
            margin-right: 6px;
        }

        .back-link:hover {
            color: #4e73df;
        }
</style>

<div class="form-wrapper shadow-sm">
    <h2 class="form-title"><i class="fas fa-upload me-2"></i>Upload Image</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.FolderId)

        <div class="form-group">
            @Html.LabelFor(m => m.ImageTitle, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.ImageTitle, new { @class = "form-control", placeholder = "Enter image title" })
            @Html.ValidationMessageFor(m => m.ImageTitle, null, new { @class = "text-danger mt-1 d-block" })
        </div>

        <div class="form-group">
            <label class="form-label">Select Image File</label>
            <input type="file" name="upload" class="form-control" />
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="@Url.Action("Folder", "Gallery", new { id = Model.FolderId })" class="back-link">
                <i class="fas fa-arrow-left"></i> Back to Folder
            </a>

            <button type="submit" class="btn btn-primary-gradient">
                <i class="fas fa-cloud-upload-alt me-1"></i> Upload
            </button>
        </div>
    }
</div>
